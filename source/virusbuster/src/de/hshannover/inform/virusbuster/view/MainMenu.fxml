<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="root" minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="800.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="de.hshannover.inform.virusbuster.MainMenuController">
  <children>
    <VBox id="VBox" alignment="CENTER" layoutX="250.0" layoutY="220.0" spacing="5.0">
      <children>
        <Button fx:id="startButton" mnemonicParsing="false" onAction="#openDifficulty" prefHeight="80.0" prefWidth="300.0" text="Start" />
        <Button fx:id="helpButton" mnemonicParsing="false" onAction="#openHelp" prefHeight="80.0" prefWidth="300.0" text="Help" />
        <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exitGame" prefHeight="80.0" prefWidth="300.0" text="Exit" />
      </children>
    </VBox>
    <ImageView id="mmimage" fitHeight="55.0" fitWidth="300.0" layoutX="250.0" layoutY="92.0" pickOnBounds="true" preserveRatio="false">
      <image>
        <Image url="@../files/title.png" />
      </image>
    </ImageView>
  </children>
</AnchorPane>
